<div class="row">
  <div class="span6 offset3">
    <table class="table">
      <% @game.squares.each_with_index do |square, index| %>
        <% if (index + 1) % 3 == 1 %>
          <% if square.nil? %>
            <tr><%= render "nil_square", index: index  %>
          <% else %>
            <tr><%= render "filled_square", square: square, index: index %>
          <% end %>
        <% elsif (index + 1) % 3 == 0 %>
          <% if square.nil? %>
		  <%= render "nil_square", index: index  %></tr>
          <% else %>
            <%= render "filled_square", square: square, index: index %></tr>
          <% end %>
        <% else %>
          <% if square.nil? %>
		  <%= render "nil_square", index: index  %>
          <% else %>
            <%= render "filled_square", square: square, index: index %></td>
          <% end %>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
