<div class="page-header">
  <div class="row">
    <div class="span6 offset3">
    <h1 class="text-center">Tic Tac Toeeeeee!</h1>
    </div>
  </div>

  <div class="row">
    <div class="span6 offset3">
      <h2 class="text-center">Player 1's Turn</h2>
    </div>
  </div>
</div>
<% if @winner == "X" %>
  <div class="row">
    <div class="span6 offset3">
      <h2 class="text-error text-center">You lost!</h1> <br>
      <p class="text-center"><%= link_to "Play Again?", games_path, method: "post", class:"text-success"%></p>
    </div>
  </div>
<% elsif @game.squares.compact.count == 9 %>
  <div class="row">
    <div class="span6 offset3">
      <h2 class="text-warning text-center">It's a draw!</h1>
      <!-- note that we don't need a "you won! message because the player can't win1" -->
      <p class="text-center"><%= link_to "Play Again?", games_path, class:"text-success", method: "post"%></p>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="span6 offset3">
    <table class="table">
      <% @game.squares.each_with_index do |square, index| %>
        <% if (index + 1) % 3 == 1 %>
          <% if square.nil? %>
          <tr><td><%= link_to "_", move_path(square: (index), game: params[:id]), {id: "square_#{(index)}", method: "put", class: "center-link"} %></td>
          <% else %>
            <tr><td id="square_<%= index %>"><%= square %></td>
          <% end %>
        <% elsif (index + 1) % 3 == 0 %>
          <% if square.nil? %>
          <td><%= link_to "_", move_path(square: (index), game: params[:id]), {id: "square_#{(index)}", method: "put", class: "center-link"} %></td></tr>
          <% else %>
            <td id="square_<%= index %>" ><%= square %></td></tr>
          <% end %>
        <% else %>
          <% if square.nil? %>
            <td><%= link_to "_", move_path(square: (index), game: params[:id]), {id: "square_#{(index)}", method: "put", class: "center-link"} %></td>
          <% else %>
            <td id="square_<%= index %>"><%= square %> </td>
          <% end %>
        <% end %>
      <% end %>
    </table>
  </div>
</div>