    var ai_square = $("#square_<%= @ai_square %>");
    ai_square.after("X");
    ai_square.remove();

    var player_square = $("#square_<%= @player_square %>");
    player_square.after("O");
    player_square.remove();

    <% if @winner || @game.squares.compact.count == 9 %>
         $('#winner').find("h2").text("<%= @winner ||  raw("It's a Draw!") %>");
         $('#winner').slideDown("slow");
    <% end %>

